<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/lightGrey" /> <!-- Background color when focused -->
            <stroke
                android:width="2dp"
                android:color="#FF0000" /> <!-- Border color when focused -->
            <corners android:radius="10dp" /> <!-- Corner radius -->
            <size android:height="48dp" /> <!-- Height when focused -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/lightGrey" /> <!-- Default background color -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Default border color -->
            <corners android:radius="10dp" /> <!-- Corner radius -->
            <size android:height="48dp" /> <!-- Default height -->
        </shape>
    </item>
</selector>
